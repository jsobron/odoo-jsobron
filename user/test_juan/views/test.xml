<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para la gestión de Canales de Venta -->
    <record id="view_custom_sale_channel_tree" model="ir.ui.view">
        <field name="name">custom.sale.channel.tree</field>
        <field name="model">custom.sale.channels</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="warehouse_id"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>
    <!-- Acción de menú para Canales de Venta -->
    <record id="action_custom_sale_channels" model="ir.actions.act_window">
        <field name="name">Canales de Venta</field>
        <field name="res_model">custom.sale.channels</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_custom_sale_channel_tree"/> 
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure y gestione los Canales de Venta aca.
            </p>
        </field>
    </record>

    <!-- Elemento de menú para Canales de Venta -->
    <record id="menu_custom_sale_channels" model="ir.ui.menu">
        <field name="name">Canales de Venta</field>
        <field name="parent_id" ref="sale.menu_sale_config"/> 
        <field name="action" ref="action_custom_sale_channels"/>
    </record>

    <!--Vista form Canales de Venta-->
    <record id ="menu_custom_form_views" model= "ir.ui.view">
        <field name="name">custom.form</field>
        <field name="model">custom.sale.channels</field>
        <field name="arch" type="xml">
            <form string="Canal de Venta">
                <sheet>
                    <notebook>
                        <page string='Informacion Principal'>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="warehouse_id"/>       
                                <field name="journal_id"/>  
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <group>
                    <field name="message_ids" widget="mail_thread"/>
                </group>
    
            </form>
        </field>
    </record>


    <!-- Agrego aca el menuitem-->
    <menuitem
        id="menu_canales_config"
        name="Canales de Venta"
        parent="sale.menu_sales_config"
        action="action_custom_sale_channels"
        sequence="5"/>


    <!--Vista para agregar CV en OV-->
    <record id="view_sale_order_form_inherit" model="ir.ui.view">  <!--Heredo vista form-->
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
		        <field name="channel_id" string = "Canal de Venta"/>
                <field name = 'journal_id' string = 'Diario Contable'/>
                <field name = 'credit_status' string = 'Grupo de credito'/>
		    </xpath>
        </field>
    </record>



    <!--Vista para grupos de credito-->

    <record id="view_credit_group_tree" model="ir.ui.view">
        <field name="name">credit.group.tree</field>
        <field name="model">credit.groups</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="action_credit_group" model="ir.actions.act_window">
        <field name="name">Grupo de creditos</field>
        <field name="res_model">credit.groups</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_credit_group_tree"/> 
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure y gestione los Grupos de Creditos.
            </p>
        </field>
    </record>

    <record id="menu_credit_group" model="ir.ui.menu">
        <field name="name">Grupo de Credito</field>
        <field name="parent_id" ref="sale.menu_sale_config"/> 
        <field name="action" ref="action_credit_group"/>
    </record>

    <record id ="menu_credit_group_form_views" model= "ir.ui.view">
        <field name="name">credit.group.form</field>
        <field name="model">credit.groups</field>
        <field name="arch" type="xml">
            <form string="Grupo de credito">
                <sheet>
                    <notebook>
                        <page string='Informacion Principal'>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="channel_id" />
                                <field name= "credit_limit"/>
                                <field name= "credit_used" />
                                <field name= "credit_available" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Agrego aca el menuitem-->
    <menuitem
        id="menu_credit_group_config"
        name="Grupo de creditos"
        parent="sale.menu_sales_config"
        action="action_credit_group"
        sequence="5"/>


    <!--Vista agregada para res_partner-->
    <record id="view_res_partner_form_inherit" model="ir.ui.view">  <!--Heredo vista form-->
        <field name="name">res.partner.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
		        <field name="has_credit" string = "Recibe credito?"/>
                <field name = 'credit_groups' widget="many2many_tags" attrs="{'readonly': [('has_credit', '=', False)]}" string = 'Grupo de credito'/>
		    </xpath>
        </field>
    </record>



</odoo>